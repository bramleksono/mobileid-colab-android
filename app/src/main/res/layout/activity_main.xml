<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MobileID Companion"
            android:id="@+id/MainTitle"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Guide:\n 1. Make sure you have working internet connection (Pastikan koneksi internet dalam kondisi baik). \n 2. To register, bring your ID Card to our office (Untuk registrasi, bawa KTP ke kantor kami). \n 3. To check registered identity, click on ID Card number text (Untuk memeriksa identitas terdaftar, tekan teks nomor KTP). \n 4. Incoming message shown in popup. Respond by choosing OK or CANCEL, and enter your PIN if asked (Pesan akan ditampilkan dalam popup. Balas dengan menekan OK atau CANCEL, dan masukkan PIN bila diminta)."
            android:id="@+id/Guide"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/LaunchReg"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="User Information"
            android:id="@+id/UserInfoTitle"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="This Is User Information"
            android:id="@+id/UserInfo"
            android:layout_gravity="center_horizontal"
            android:onClick="onClick"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GCM RegID"
            android:id="@+id/GCMTitle"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Registering in background.."
            android:id="@+id/GCMTv"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Data"
            android:id="@+id/UserClearBtn"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</ScrollView>
